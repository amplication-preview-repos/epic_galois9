datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ProcessedPost {
  authorId  String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String?
  updatedAt DateTime @updatedAt
}

model ProcessedComment {
  authorId  String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String?
  updatedAt DateTime @updatedAt
}
